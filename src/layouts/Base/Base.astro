---
import "./Base.scss";
interface Props {
  title: string;
}

const { title } = Astro.props;
const isProduction = import.meta.env.ENVIRONMENT === "production";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link href="https://ccss.carleton.ca/favicon.ico" rel="icon" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@mdi/font@7.4.47/css/materialdesignicons.min.css"
    />
    {
      isProduction && (
        <>
          <noscript>
            <img src="https://shynet-mpb4.onrender.com/ingress/cc9fac9d-2deb-4201-822e-3625f4530b8f/pixel.gif" />
          </noscript>
          <script
            defer
            src="https://shynet-mpb4.onrender.com/ingress/cc9fac9d-2deb-4201-822e-3625f4530b8f/script.js"
          />
        </>
      )
    }
  </head>
  <body>
    <slot />
  </body>
</html>
